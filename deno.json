{
	"name": "@pumpn/eslint-config",
	"version": "16.2.1",
	"exports": "./config.js",
	"tasks": {
		"lint": "deno x eslint",
		"publish": "deno task lint && VERSION=$(cat deno.json | jq -r .version) && git tag -a \"v$VERSION\" -m \"\" && git push origin \"v$VERSION\" && deno publish --no-check && npm publish",
		"update-import-map": "deno run -A ./scripts/update-import-map.js",
		"update-package-json": "deno run -A ./scripts/update-package-json.js",
		"update-tsconfig": "deno run -A ./scripts/update-tsconfig.js"
	},
	"compilerOptions": {
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"checkJs": true,
		"exactOptionalPropertyTypes": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"noErrorTruncation": true,
		"noFallthroughCasesInSwitch": false,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": false,
		"noUncheckedIndexedAccess": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strict": true,
		"lib": [
			"dom",
			"dom.iterable",
			"dom.asynciterable",
			"deno.ns",
			"deno.unstable",
			"esnext"
		]
	},
	"imports": {
		"@eslint-community/eslint-plugin-eslint-comments": "npm:@eslint-community/eslint-plugin-eslint-comments@^4.6.0",
		"@std/path": "jsr:@std/path@^1.1.4",
		"@stylistic/eslint-plugin": "npm:@stylistic/eslint-plugin@^5.7.0",
		"@typescript-eslint/parser": "npm:@typescript-eslint/parser@^8.53.0",
		"eslint": "npm:eslint@^9.39.2",
		"eslint-import-resolver-typescript": "npm:eslint-import-resolver-typescript@^4.4.4",
		"eslint-plugin-command": "npm:eslint-plugin-command@^3.4.0",
		"eslint-plugin-depend": "npm:eslint-plugin-depend@^1.4.0",
		"eslint-plugin-import-x": "npm:eslint-plugin-import-x@^4.16.1",
		"eslint-plugin-jsdoc": "npm:eslint-plugin-jsdoc@^62.1.0",
		"eslint-plugin-no-secrets": "npm:eslint-plugin-no-secrets@^2.2.1",
		"eslint-plugin-perfectionist": "npm:eslint-plugin-perfectionist@^5.3.1",
		"eslint-plugin-promise": "npm:eslint-plugin-promise@^7.2.1",
		"eslint-plugin-react-dom": "npm:eslint-plugin-react-dom@^2.7.2",
		"eslint-plugin-react-hooks-extra": "npm:eslint-plugin-react-hooks-extra@^2.7.2",
		"eslint-plugin-react-naming-convention": "npm:eslint-plugin-react-naming-convention@^2.7.2",
		"eslint-plugin-react-web-api": "npm:eslint-plugin-react-web-api@^2.7.2",
		"eslint-plugin-react-x": "npm:eslint-plugin-react-x@^2.7.2",
		"eslint-plugin-redos": "npm:eslint-plugin-redos@^4.5.0",
		"eslint-plugin-regexp": "npm:eslint-plugin-regexp@^2.10.0",
		"eslint-plugin-security": "npm:eslint-plugin-security@^3.0.1",
		"eslint-plugin-sonarjs": "npm:eslint-plugin-sonarjs@^3.0.5",
		"eslint-plugin-tailwindcss": "npm:eslint-plugin-tailwindcss@^4.0.0-beta.0",
		"eslint-plugin-unicorn": "npm:eslint-plugin-unicorn@^62.0.0",
		"globals": "npm:globals@^17.0.0",
		"preact": "https://esm.sh/*preact@10.19.3?dev",
		"preact/jsx-runtime": "https://esm.sh/*preact@10.19.3/jsx-runtime?dev"
	},
	"exclude": [
		"**/_fresh/*",
		"./documentation"
	],
	"nodeModulesDir": "none"
}